<p id="notice"><%= notice %></p>

<h1>Turbo to-do list</h1>

<table>
  <thead>
    <tr>
      <th></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @todo_items.each do |todo_item| %>
      <tr>
        <td><%= todo_item.content %></td>
        <td><%= link_to 'Edit', edit_todo_item_path(todo_item) %></td>
        <td><%= link_to 'Delete', todo_item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% if todo_item.completed? %>
          <td>Yay! Completed!</td>
        <% else %>
          <td><%= link_to 'Mark as completed', complete_todo_item_path(todo_item), method: :patch %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

